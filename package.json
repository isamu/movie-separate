{
  "name": "mulmo-movie",
  "version": "0.0.1",
  "type": "module",
  "description": "AI-powered video processing tool with transcription, translation, and speaker identification",
  "main": "lib/index.js",
  "bin": {
    "mulmo-movie": "./lib/bin.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "lint": "eslint src",
    "start": "tsx src/bin.ts",
    "evaluate": "tsx src/evaluate-only.ts",
    "digest": "tsx src/digest.ts",
    "test": "tsx --test test/**/*_test.ts",
    "test:watch": "tsx --test --watch test/**/*_test.ts"
  },
  "keywords": [
    "video",
    "transcription",
    "translation",
    "ai",
    "openai",
    "whisper",
    "tts",
    "speaker-identification",
    "cli"
  ],
  "author": "Isamu Arimoto",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/isamu/movie-separate.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "lib",
    "README.md",
    "package.json",
    "LICENSE"
  ],
  "directories": {
    "lib": "lib"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.0.5",
    "@types/p-limit": "^2.2.0",
    "@types/yargs": "^17.0.35",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^3.0.6",
    "prettier": "^3.8.1",    
    "globals": "^17.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "@types/fluent-ffmpeg": "^2.1.28",
    "dotenv": "^17.2.3",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.5",
    "openai": "^6.8.1",
    "p-limit": "^7.2.0",
    "yargs": "^18.0.0"
  }
}
